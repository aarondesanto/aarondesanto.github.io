*
  margin 0
  padding 0
  -moz-box-sizing border-box
  box-sizing border-box
  font-family arial

html, body
  height 100%

#map
  height 200px
  width 100%

// Navbar CSS
.navbar
  z-index 1
  position fixed
  top 0
  width 100%
  height 48.4px
  background-color #2075df
  ul
    position relative
    display inline-table
    width 100%
    list-style none
    ul
      display none
      background #1860c0
      position absolute
      top 100%
      right 0
      li
        float none
        position relative
        a
          color #fff
        a:hover
          background #4b545f
      ul
        position absolute
        left 100%
        top 0
    li
      float left
      a
        display block
        padding 15px 30px
        color #fff
        text-decoration none
      ul
        width 85px
        a
          text-align center
          padding 5px 10px
          font-weight bold
    li:hover
      background-color #1055bf
    li:hover > ul
      display block
    .hamburger
      float right
      width 83px
      text-align center
      a
        padding 3px 0
        font-size 2.3em
      ul
        width 140px
        a
          padding 0
          font-size 1em
          li
            height 48px
            padding-top 15px
  ul:after
    content ""
    clear both
    display block

// General Section CSS
section
  height 720px
  width 360px
  padding-top 60px
  h2
    text-align center

#rides
  overflow scroll


// Home page CSS
#home
  div
    ul
      li
        margin-left 1.5em

// Ride1 CSS
.ridecol-top
  border solid black 1px
